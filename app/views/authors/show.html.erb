<p id="notice"><%= notice %></p>

<div class="card-deck mb-3 text-center">
      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal"> <%= @author.first_name+" "+@author.last_name %> </h4>
        </div>
        <div class="card-body">
          <h1 class="card-title pricing-card-title">
            <small class="text-muted"> 
              <div class="star-rating" data-score="<%= @author.rating %>" ></div>
            </small>
          </h1>
          <ul class="list-unstyled mt-3 mb-4">
            <li> <%= @author.about %> </li>
          </ul>

            <table class="table table-hover" style="width: 600px">

              <thead>
                <tr>
                  <th>Title</th>
                  <th>Rating</th>
                  <th>Description</th>
                </tr>
              </thead>

              <% @author.books.each do |book| %>
                <tbody>
                  <tr>
                    <td> <%= book.title %> </td>
                    <td> <div class="star-rating" data-score="<%= book.rating %>" ></div> </td>
                    <td> <%= book.description %> </td>
                  </tr>
                </tbody>
              <% end %>
              
            </table>

            <% if user_signed_in? %>
              <%= link_to "Edit", edit_author_path(@author), class: "btn btn-outline-warning" %>
            <% end %>
            <%= link_to "Back", authors_path, class: "btn btn-outline-primary" %>

        </div>
      </div>
</div>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>