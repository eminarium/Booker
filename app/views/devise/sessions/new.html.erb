<div class="card">

  <div class="card-header"><h3>Log In</h3></div>

  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group row">
        <%= f.label "Email", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-4">
          <%= f.email_field :email, class: "form-control", id: "email", autofocus: true, autocomplete: "email", placeholder: "Email" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label "Password", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-4">
          <%= f.password_field :password, class: "form-control", id: "password", autocomplete: "email", placeholder: "Password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <button type="submit" class="btn btn-primary">Log In</button>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>